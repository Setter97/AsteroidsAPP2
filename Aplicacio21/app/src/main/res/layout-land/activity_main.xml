<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text_app_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/paddingTextApp"
        android:text="@string/text_aplicacio"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sizeTitol" />

    <Button
        android:id="@+id/btnjugar"
        android:layout_width="@dimen/widthButons"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_app_id"

        android:layout_toStartOf="@id/space1"
        android:text="@string/botonJugar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/textButons" />

    <Space
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_app_id" />

    <Button
        android:id="@+id/btnconf"
        android:layout_width="@dimen/widthButons"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_app_id"

        android:layout_toEndOf="@+id/space1"
        android:text="@string/botonConfig"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/textButons" />


    <Button
        android:id="@+id/btnacerca"
        android:layout_width="@dimen/widthButons"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnjugar"
        android:layout_toStartOf="@id/space1"
        android:text="@string/botonAcerca"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/textButons" />

    <Button
        android:id="@+id/btnsalir"
        android:layout_width="@dimen/widthButons"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnconf"

        android:layout_toEndOf="@id/btnacerca"
        android:text="@string/botonSalir"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/textButons" />

</RelativeLayout>